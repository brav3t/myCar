<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="date"
            type="String"/>
        <variable
            name="amount"
            type="String"/>
        <variable
            name="cost"
            type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="@{date}"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="text_date" />

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@{amount}"
            android:textAlignment="viewStart"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_date"
            app:layout_constraintStart_toEndOf="@+id/text_date"
            tools:text="text_amount" />

        <TextView
            android:id="@+id/text_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@{cost}"
            android:textAlignment="viewStart"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_amount"
            app:layout_constraintStart_toEndOf="@+id/text_amount"
            tools:text="text_cost" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>